<Window x:Class="FileSystemSnarl.FileSystemSnarlClass"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FileSystemSnarl" Height="393" Width="442" Background="BurlyWood" Visibility="Visible" Name="mainWindow" Closing="OnClose" StateChanged="OnStateChanged" IsVisibleChanged="OnIsVisibleChanged" IsEnabled="True" Icon="/FileSystemSnarl;component/FileSystemSnarl.ico">
    <Grid Background="BurlyWood" Width="420" Height="357" ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="108*" />
            <RowDefinition Height="132*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Margin="9,55,11,24" Name="border3" />
        <Border Margin="10,11,14,63" Name="border2" />
        <Border Grid.RowSpan="2" Margin="10,109.3,12,154" Name="border1" BorderThickness="0" />
        <Label Margin="12,0,10,0" Name="info" Height="27" VerticalAlignment="Bottom" Visibility="Visible" Grid.Row="1" ForceCursor="False">Licensed under GPL, see http://tlhan-ghun.de/</Label>
        <TextBox Height="21" Margin="0,12,26,0" Name="fieldDisplayTime" VerticalAlignment="Top" VerticalContentAlignment="Center" Visibility="Visible" HorizontalAlignment="Right" Width="27" TextChanged="fieldDisplayTime_TextChanged">20</TextBox>
        <Label Height="26.5" Margin="0,12,59,0" Name="label3" VerticalAlignment="Top" IsEnabled="True" HorizontalAlignment="Right" Width="118">Display time (seconds)</Label>
        <RadioButton Margin="12,12,0,0" Name="radioButton1" IsChecked="True" GroupName="LocalOrRemote" Checked="radioButton1_Checked" Height="14" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" IsEnabled="True">Local</RadioButton>
        <RadioButton Margin="11,32,0,0" Name="radioButton2" HorizontalAlignment="Left" Width="119" GroupName="LocalOrRemote" Checked="radioButton2_Checked" IsEnabled="True" Height="16.3" VerticalAlignment="Top">Remote</RadioButton>
        <Label Margin="33,46,0,0" Name="label4" HorizontalAlignment="Left" Width="84" Height="23" VerticalAlignment="Top">Forward to IP</Label>
        <Label Margin="33,61,0,70" Name="label5" HorizontalAlignment="Left" Width="98">Forward to port</Label>
        <TextBox Margin="136,46,202,0" Name="targetIP" TextChanged="targetIP_TextChanged" Height="23" VerticalAlignment="Top" IsEnabled="True">127.0.0.1</TextBox>
        <TextBox Margin="136,66,202,70" Name="targetPort" TextChanged="targetPort_TextChanged" IsEnabled="True">9887</TextBox>
        <Button Margin="0,48,22,70" Name="startButton" Click="startButton_Click" Background="Gray" Foreground="White" HorizontalAlignment="Right" Width="165" IsEnabled="False">Choose folder first</Button>
        <CheckBox HorizontalAlignment="Left" Margin="12,82,0,97" Name="checkBoxCreated" Width="84"  IsEnabled="True" Grid.Row="1" IsChecked="True">Created</CheckBox>
        <CheckBox Height="16" HorizontalAlignment="Left" Margin="12,0,0,75" Name="checkBoxChanged" VerticalAlignment="Bottom" Width="84" Grid.Row="1" IsEnabled="True"  IsChecked="True">Changed</CheckBox>
        <TextBox Height="23" Margin="112,6.3,210,0" Name="textBoxFilter" VerticalAlignment="Top" Grid.Row="1" IsEnabled="True">*.*</TextBox>
        <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,13.3,67,0" Name="checkBoxIncludeSubdirectories" VerticalAlignment="Top" Width="120" Grid.Row="1" IsEnabled="True" IsChecked="True">Include subdirectories</CheckBox>
        <Button Height="22.658" HorizontalAlignment="Right" Margin="0,0,22,0.342" Name="chooseFolder" VerticalAlignment="Bottom" Width="79" Click="chooseFolder_Click">Choose folder</Button>
        <TextBox Height="23" Margin="20,0,107,0" Name="textBoxPath" VerticalAlignment="Bottom" TextChanged="textFieldWatchedFolder_TextChanged" />
        <Label Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="20,6.3,0,0" Name="label1" VerticalAlignment="Top" Width="86">Filter filenames</Label>
        <CheckBox Height="16" HorizontalAlignment="Left" IsEnabled="True" Margin="12,0,0,31" Name="checkBoxDeleted" VerticalAlignment="Bottom" Width="84" Grid.Row="1" IsChecked="True">Deleted</CheckBox>
        <CheckBox HorizontalAlignment="Left" IsEnabled="True" Margin="12,0,0,53" Name="checkBoxRenamed" Width="84" Grid.Row="1" IsChecked="True" Height="15.7" VerticalAlignment="Bottom">Renamed</CheckBox>
        <CheckBox IsEnabled="True" Margin="175,82,161,97" Name="checkBoxAttributes" Grid.Row="1">Attributes</CheckBox>
        <CheckBox Height="16" IsEnabled="True" Margin="175,0,161,75" Name="checkBoxLastAccess" VerticalAlignment="Bottom" Grid.Row="1">Last access</CheckBox>
        <CheckBox IsEnabled="True" Margin="175,0,161,53" Name="checkBoxLastWrite" Grid.Row="1" IsChecked="True" Height="15.7" VerticalAlignment="Bottom">Last write</CheckBox>
        <CheckBox IsEnabled="True" Margin="0,82,59,97" Name="checkBoxSize" Grid.Row="1" IsChecked="True" HorizontalAlignment="Right" Width="84">Size</CheckBox>
        <CheckBox Height="15.7" IsEnabled="True" Margin="0,0,59,75" Name="checkBoxFilename" VerticalAlignment="Bottom" Grid.Row="1" IsChecked="True" HorizontalAlignment="Right" Width="84">Filename</CheckBox>
        <CheckBox IsEnabled="True" Margin="0,0,45,51" Name="checkBoxDirectoryName" Grid.Row="1" IsChecked="True" HorizontalAlignment="Right" Width="98" Height="18" VerticalAlignment="Bottom">Directory name</CheckBox>
        <Label Height="28" HorizontalAlignment="Left" Margin="20,0,0,23" Name="labelChooseFile" VerticalAlignment="Bottom" Width="111" FontWeight="Bold">Folder</Label>
        <Label FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="12,59,0,0" Name="labelFilterOptions" VerticalAlignment="Top" Width="120" Grid.Row="1">Filter options</Label>
    </Grid>
</Window>
